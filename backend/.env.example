# Watch Tower Environment Configuration

# Application
APP_NAME="Watch Tower"
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-this

# Database (PostgreSQL with PostGIS)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/watch_tower
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Event Streaming
EVENT_STREAM_PREFIX=watch_tower:events
EVENT_CONSUMER_GROUP=watch_tower_consumers
EVENT_BATCH_SIZE=100
EVENT_BLOCK_MS=1000

# LocoNav GPS Integration
LOCONAV_API_KEY=
LOCONAV_API_SECRET=
LOCONAV_WEBHOOK_SECRET=
LOCONAV_BASE_URL=https://api.loconav.com

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS_JSON=
GOOGLE_SHEETS_MASTER_SPREADSHEET_ID=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Slack Bot
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_SIGNING_SECRET=

# Celery (uses Redis)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TIMEZONE=Africa/Lagos

# Lagos Configuration
LAGOS_TIMEZONE=Africa/Lagos
LAGOS_LAT=6.5244
LAGOS_LNG=3.3792